<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from backup -->
        <exclude domain="sharedpref" path="secure_prefs.xml" />
        <exclude domain="database" path="sensitive.db" />
    </cloud-backup>
    <!--
    Device transfers are automatically disabled on API 31+ if no rules are specified.
    If you want to enable transfers, you must create rules that allow it.
    -->
    <device-transfer>
        <!-- Allow all app data to be transferred -->
        <include domain="sharedpref" path="." />
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules>